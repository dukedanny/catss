<%= form_for(@device) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :imei %><br />
    <%= f.text_area :imei %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
