<%= form_for :device, @device, :url => { :action => "create" } do |f| %>
<div class="errors">
  <%= f.error_messages %>
</div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :imei %><br />
    <%= f.text_field :imei %>
  </div>
  <div class="field">
    <%= f.label :display %><br />
    <%= select( "display", "id", { "private" => "1", "public" => "0"}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
