<div style="margin-top:16px;margin-left:30px;width:100%;background-color:#000; height:500px;">
<div id="leftPan" class="indexpage_public_devices">
<h2>Public devices</h2>
<ul>
<li class="fill-up"></li>
 <% @devices_pub.each do |device| %>
  <li><%= link_to device.name, { :action => 'show', :id => device.id}, :class => 'middle' %></li>
 <% end %>
<li class="fill-down"></li>
</ul>
</div>
<div class="about">
<h2>New device</h2>
<% form_for(@device) do |f| %>
<%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :imei %><br />
    <%= f.text_field :imei %>
  </div>
  <div class="field">
    <%= f.label :display %><br />
    <%= select( "device", "display", { "Private" => "private", "Public" => "public"}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', devices_path %>
</div>
</div>
<script type="text/javascript"> 
   $("#footerMain").hide();
   $("#footer").hide();
   $("#sliderWrap2").hide();
</script>
